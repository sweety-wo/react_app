root = true

[*.{js,jsx,es6,babel,ts}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true

[*.md]
trim_trailing_whitespace = false
